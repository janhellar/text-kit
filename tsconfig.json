{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "module": "commonjs",
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "allowJs": true,
    "lib": ["ES2020", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "tests/**"
  ]
}
